<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/md_light_blue_500">

            <TextView
                android:id="@+id/lblTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="Registro"/>

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:background="@mipmap/ic_close"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Nombre"
                    android:textColor="@color/colorBlackDark"
                    android:textStyle="bold"
                    android:textSize="15.3dp"/>

                <EditText
                    android:id="@+id/txtNameUser"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Nombre"
                    android:textSize="15dp"
                    android:background="@drawable/format_edittext"
                    android:paddingTop="2dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:singleLine="true"
                    android:inputType="textCapWords"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Correo"
                    android:textColor="@color/colorBlackDark"
                    android:textStyle="bold"
                    android:textSize="15.3dp"/>

                <EditText
                    android:id="@+id/txtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="example@email.com"
                    android:textSize="15dp"
                    android:background="@drawable/format_edittext"
                    android:paddingTop="2dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="ContraseÃ±a"
                    android:textColor="@color/colorBlackDark"
                    android:textStyle="bold"
                    android:textSize="15.3dp"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/edtPassText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    app:errorTextAppearance="@style/Widget.Design.TextInputLayout"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorBlackDark">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtContrasenia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/format_edittext"
                        android:hint="*********"
                        android:textSize="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:singleLine="true"
                        android:inputType="textPassword" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Rol"
                    android:textColor="@color/colorBlackDark"
                    android:textStyle="bold"
                    android:textSize="15.3dp"/>

                <Spinner
                    android:id="@+id/sp_rol"
                    android:layout_width="match_parent"
                    android:background="@drawable/style_spinner"
                    android:layout_height="40dp"/>

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                app:cardCornerRadius="7dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/md_light_blue_500"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="Guardar"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>