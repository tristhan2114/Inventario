<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:layout_margin="1dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_light_blue_500"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/lblTipoEntrega"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrega a"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>

                <TextView
                    android:id="@+id/lblFechaCreacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="Fecha de creaciÃ³n"
                    android:textColor="@color/colorGray"
                    android:textSize="14dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblNameEntrega"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de empleado, departamento o area"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/lblFechaEntrega"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de entrega"
                    android:textSize="17dp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/lblEstado"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado: creado."
                    android:textSize="17dp"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>