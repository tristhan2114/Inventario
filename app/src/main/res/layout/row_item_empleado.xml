<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_light_blue_500"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/lblArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de area"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/lblJornada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jornada"
                    android:textColor="@color/colorGray"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/img_empleado"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/lblNames"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_empleado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Nombres y apellidos"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/lblCedula"
                    android:layout_below="@+id/lblNames"
                    android:layout_toRightOf="@+id/img_empleado"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="CI 095555555"
                    android:textColor="@color/colorGray"
                    android:textSize="14dp"/>

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>