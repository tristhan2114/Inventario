<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_light_blue_500"
                android:orientation="horizontal"
                android:padding="5dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_toLeftOf="@+id/lyEliminar"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/lblCodigo"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="CÃ³digo"
                       android:textColor="@color/colorWhite"
                       android:textSize="15dp"
                       android:textStyle="bold"/>

                   <TextView
                       android:id="@+id/lblArea"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Area"
                       android:textColor="@color/colorGray"
                       android:textSize="14dp"
                       android:textStyle="bold"/>

               </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyEliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:id="@+id/ImgEliminar"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_delete"/>
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/lblDescripcion"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_empleado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Descripcion"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"/>


            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>